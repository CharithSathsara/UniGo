<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Clubs"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:padding="15dp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search"
                android:padding="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clubs"
            android:id="@+id/clubTitle"
            android:textSize="30sp"
            android:paddingStart="25dp"
            android:textAllCaps="true"
            android:textColor="@color/RoyalBlue"
            android:textStyle="bold"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/button_bg"
            android:layout_marginTop="20dp"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:src="@drawable/course"
                android:id="@+id/imgCompSoc"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="25dp"
                android:text="CompSoc"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:text="Compsoc (Computer Science Society) at UCSC"
                app:backgroundTint="#70F3F3"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_bg">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:src="@drawable/course" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="25dp"
                android:text="Rotract"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:text="Rotaract is a youth service organization that is sponsored by Rotary International."
                android:textColor="@color/black"
                app:backgroundTint="#70F3F3" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/button_bg"
            android:layout_marginTop="20dp"
            android:layout_margin="10dp">


            <ImageView
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:src="@drawable/course" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="25dp"
                android:text="IEEE"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:text="IEEE (Institute of Electrical and Electronics Engineers) is a professional organization dedicated"
                app:backgroundTint="#70F3F3"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_bg">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:src="@drawable/course" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="25dp"
                android:text="AIESEC"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:text="AIESEC (Association Internationale des Étudiants en Sciences Économiques et Commerciales) "
                android:textColor="@color/black"
                app:backgroundTint="#70F3F3" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/button_bg"
            android:layout_marginTop="20dp"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:src="@drawable/course" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="25dp"
                android:text="LEO"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:text="Leo Club is a youth organization that is sponsored by Lions Clubs International"
                app:backgroundTint="#70F3F3"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>